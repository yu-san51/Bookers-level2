<div class="container">
	<div class="row">
		<div class="col-xs-9" id="content_field">
			<h2><%= @user.name %>さんとのチャットルーム</h2>

					<% @chats.each do |chat| %>
						<% if chat.user == current_user %>
								<p style="text-align: right;"><%= chat.content %></p>
						<% else %>
								<p style="text-align: left;"><%= chat.content %></p>
						<% end %>
					<% end %>

			<%= form_for @chat, remote: true do |f| %>
				<div class="col-xs-12">
					<%= f.text_field :content, id: "text_field", class: "form-controll" %>
				</div>
				<%= f.hidden_field :room_id, :value => @room.id %>
				<%= f.hidden_field :sent_id, :value => @user.id %>

				<% f.submit %>
			<% end %>
		</div>
	</div>
</div>