<div class="container">
  <div class="row">
	<%= render "books/user_create", user: @user, book: @book %>
	<div class="col-xs-9">
		<h2>Users</h2>
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, size:"100x100", fallback: "no_image.jpg" %></td>
						<td><%= user.name %></td>
						<td></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
  </div>
</div>