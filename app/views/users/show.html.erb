
<div class="container">
	<%= render "books/user_create", user: @user %>
</div>

<div class="container">
	<div class="row">
	<h2>Books</h2>
	</div>
	<div class="row">
		<table class="table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= link_to "#{book.title}", book_path(book) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

