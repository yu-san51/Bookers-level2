
<div class="container">
	<%= render "books/user_create", user: @user %>

	<div class="row">
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inberse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, size:"40x40" %></td>
						<td><%= link_to "#{book.title}", book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div><!--row-->
</div>

