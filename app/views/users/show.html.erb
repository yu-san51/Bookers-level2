
<div class="container">
	<%= render "books/user_create", user: @user, book: @book %>

	<div class="row">
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inberse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<% @books.each do |book| %>
						<td><%= link_to user_path(book.id) do %>
							<%= attachment_image_tag @user, :profile_image, size:"40x40", fallback: "no_image.jpg" %>
							<% end %>
							</td>
						<td><%= link_to "#{book.title}", book_path(book) %></td>
						<td><%= book.body %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div><!--row-->
</div>

