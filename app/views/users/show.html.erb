
<div class="container">
	<%= render "books/user_create", user: @user %>
</div>

<div class="container">
	<div class="row">
	<h2>Books</h2>
	</div>
	<div class="row">
		<table class="table">
			<thead>
				<tr>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td>
						<% if book.user == current.user %>
						<%= link_to "edit", edit_book_path%>
						<%= link_to "delete",book_path(book), method: :delete %>
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

