
<!--search-->

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h2>検索結果</h2>
			<table class="table">
			<% if @range == "2" %><!--book search-->
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th><!--nice--></th>
						<th><!--comment--></th>
						<th><!--show--></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to user_path(book.user.id) do %>
									<%= attachment_image_tag book.user, :profile_image, size:"100x100", fallback: "no_image.jpg" %>
								<% end %>
							</td>
							<td>
								<%= link_to "#{book.title}", book_path(book) %>
							</td>
							<td>
								<%= book.body %>
							</td>
						<!--nice-->
							<td><!--yes nice-->
							<% if book.favorited_by?(current_user) %>
								<%= link_to book_favorites_path(book.id), method: :delete do %>
								  <i class="fa fa-heart" aria-hedden="true" style="color: red;"></i>
								  <%= book.favorites.count %>
								<% end %>
							<% else %><!--no nice-->
								<%= link_to book_favorites_path(book.id), method: :post do %>
								  	<i class="fa fa-heart-o" aria-hidden="true"></i>
								  	<%= book.favorites.count %>
								<% end %>
							<% end %>
							</td>
						<!--comment-->
							<td>コメント数：<%= book.book_comments.count %></td>
							<td></td>
						</tr>
					<% end %><!--each book-->
				</tbody>

			<% else %><!--user search-->
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, size:"40x40", fallback: "no_image.jpg" %>
							</td>
							<td>
								<%= user.name %>
							</td>
							<td>フォロー数：<%= user.followings.count %>
							</td>
							<td>フォロワー数：<%= user.followers.count %>
							</td>
							<td><%= render "relationships/follow_button", user: user %>
							</td>
							<td><%= link_to "Show", user_path(user.id) %>
							</td>
						</tr>
					<% end %>
				</tbody>
			<% end %><!--book or user-->
			</table>
		</div>
	</div>
</div>