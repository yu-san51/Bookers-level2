<!DOCTYPE html>
<html>
  <head>
    <title>BookersLevel2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">
        Bookers
      </a>
    </div>
    
    <div class="collapse navbar-collapse" id="navbarEexample7">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", user_path(current_user.id) %></li>
          <li class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to "Users", "users_path" %></li>
          <li class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to "Books", "books_path" %></li>
          <li class="glyphicon glyphicon-share" aria-hidden="true"><%= link_to "logout", destroy_user_session_path, method: :delete %></li>

        <% else %>

          <li class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "Home", root_path %></li>
          <li class="glyphicon glyphicon-link" aria-hidden="true"><%= link_to "About", home_about_path %></li>
          <li class="glyphicon glyphicon-edit" aria-hidden="true"><%= link_to "sign up", new_user_registration_path %></li>
          <li class="glyphicon glyphicon-log-in" aria-hidden="true"><%= link_to "login", user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>



    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>


</html>
