<%= render "books/user_create", user: @user %>

<h2>Books</h2>
<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag book.user, :profile_image, size:"100x100" %></td>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>