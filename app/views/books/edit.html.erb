<div class="container">
	<div class="row" >
		<h2>Editing Book</h2>

		<%= form_for(@book) do |f| %>
			<label>Title</label>
			<%= f.text_field :title, autofocus:true, class:"form-control" %>
			<label>Opinion</label>
			<%= f.text_area :body, autofocus:true, class:"form-control" %>

			<%= f.submit "Update Book" %>

		<% end%>
	</div>

	<div class="row">
	<%= link_to "Show", book_path(@book) %>
	<span>|</span>
	<%= link_to "Back", books_path %>
	</div>
</div>
