<div class="container">
	<div class="row" >
		<div class="col-md-6 col-md-offset-3">
			<h2>Editing Book</h2>

		<%= form_for(@book) do |f| %>
			<%= render 'devise/shared/error_messages', resource: @book %>

			<label>Title</label>
			<%= f.text_field :title, autofocus:true, class:"form-control col-xs-12" %>
			<label>Opinion</label>
			<%= f.text_area :body, autofocus:true, class:"form-control col-xs-12" %>

			<%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>

		<% end %>
		</div><!--row-->

	<div class="row">
		<%= link_to "Show", book_path(@book) %>
		<span>|</span>
		<%= link_to "Back", books_path %>
	</div>
</div>
