<!-- flash -->


<table>
	<caption>User info</caption>
	<tbody>
		<tr>
			<td><%= attachment_image_tag user, :profile_image, size:"100x100", format:"jpeg", fallback:"no_image.jpg" %></td><td></td>
		</tr>
		<tr>
			<td>name</td><td><%= user.name %></td>
		</tr>
		<tr>
			<td>introduction</td><td><%= user.introduction %></td>
		</tr>
	</tbody>
</table>
<div class="row">
	<%= link_to "", edit_user_path, class:"btn btn-deault glyphicon glyphicon-wrench" %>
</div>


<div class="book_create">
	<h2>New book</h2>
	<%= form_for(@create_book, url: books_path) do |f| %>
		<% if @create_book.errors.any? %>
		<div id="error_explanation">
			<h2><%= @create_book.errors.count %>件のエラーが発生しました。</h2>
			<ul>
				<% @create_book.errorsfull_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
	<div class="row">
		<label>Title</label>
		<%= f.text_field :title, class:"form-control" %>
	</div>
	<div class="row">
		<label>Opinion</label>
		<%= f.text_area :body, class:"form-control", rows:"3" %>
	</div>
	<br>
	<%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
	<% end %>

</div>

