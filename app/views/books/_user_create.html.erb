<%= render 'layouts/error_message', model: @create_book %>

<div class="col-xs-3">

	<h2>User info</h2>
	<table class="table">
		<tbody>
			<tr>
				<td><%= attachment_image_tag user, :profile_image, size:"100x100", format:"jpeg", fallback: "no_image.jpg" %></td>
				<td></td>
			</tr>
			<tr></tr>
			<tr>
				<td>name</td>
				<td><%= user.name %></td>
			</tr>
			<tr>
				<td>introduction</td>
				<td><%= user.introduction %></td>
			</tr>
			<tr>
				<td>follows</td>
				<td><%= link_to following_user_path(user.id) do %>
						<%= user.followings.count %>
					<% end %>
				</td>
			</tr>
			<tr>
				<td>followers</td>
				<td><%= link_to followers_user_path(user.id) do %>
						<%= user.followers.count %>
					<% end %>
				</td>
			</tr>
			<% if user != current_user %>
			<tr> <!--chatroom-->
				<% if room == null %>
				<% else %>
					<%= link_to "#{room.receiver.name}さんとのチャットルーム", room_chat_path() %>
				<% end%>
					<%= link_to "#{room.receiver,name}さんとのチャットルーム",
					new_room_path %>
				<% end %>
			</tr>
		</tbody>
	</table>

	<div class="row">
		<% if user == current_user %>
			<%= link_to "", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
		<% else %>
			<!--follow-->
			<%= render "relationships/follow_button", user: @user, class:"col-xs-12" %>
		<% end %>
	</div>

		<!--投稿フォーム-->

	<div class="book_create">
		<h2>New book</h2>
		<%= form_for(@create_book) do |f| %>

			<div class="row">
				<label>Title</label>
				<%= f.text_field :title, class:"col-xs-12 form-control" %>
			</div>
			<div class="row">
				<label>Opinion</label>
				<%= f.text_area :body, class:"form-control col-xs-12", rows:"3" %>
			</div>
			<br>
			<%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
		<% end %>
	</div>
</div>

